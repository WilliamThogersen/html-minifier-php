{
    "name": "williamthogersen/minifier",
    "description": "High-performance HTML minifier with Rust backend via PHP FFI. Provides fast, memory-safe HTML, CSS, and JavaScript minification using tokenized parsing.",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "html",
        "minifier",
        "minify",
        "optimization",
        "performance",
        "rust",
        "ffi",
        "css",
        "javascript",
        "compression",
        "web-performance"
    ],
    "homepage": "https://github.com/WilliamThogersen/html-minifier-php",
    "readme": "README.md",
    "support": {
        "issues": "https://github.com/WilliamThogersen/html-minifier-php/issues",
        "source": "https://github.com/WilliamThogersen/html-minifier-php"
    },
    "autoload": {
        "psr-4": {
            "WilliamThogersen\\Minifier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WilliamThogersen\\Minifier\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "William Gade Th√∏gersen"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-ffi": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse --no-progress",
        "analyse:baseline": "phpstan analyse --generate-baseline",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "build": "bash build.sh",
        "build:release": "bash build.sh --release",
        "check": [
            "@analyse",
            "@test"
        ],
        "ci": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests",
        "test:unit": "Run unit tests only",
        "test:integration": "Run integration tests only",
        "test:coverage": "Generate code coverage report",
        "analyse": "Run PHPStan static analysis",
        "analyse:baseline": "Generate PHPStan baseline",
        "cs:check": "Check code style",
        "cs:fix": "Fix code style issues",
        "build": "Build Rust library (development)",
        "build:release": "Build Rust library (release/optimized)",
        "check": "Run static analysis and tests",
        "ci": "Run all CI checks (code style, analysis, tests)"
    }
}

